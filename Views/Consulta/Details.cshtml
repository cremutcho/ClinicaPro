@model ClinicaPro.Core.Entities.Consulta

@{
    ViewData["Title"] = "Detalhes da Consulta";
}

<h1 class="mt-4">Detalhes da Consulta</h1>

<div class="card shadow-sm mt-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Data e Hora</dt>
            <dd class="col-sm-9 mb-3">@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9 mb-3">@Model.Status</dd>

            <dt class="col-sm-3">Paciente</dt>
            <dd class="col-sm-9 mb-3">@Model.Paciente?.Nome ?? "Não cadastrado"</dd>

            <dt class="col-sm-3">Médico</dt>
            <dd class="col-sm-9 mb-3">@Model.Medico?.Nome ?? "Não cadastrado"</dd>

            <dt class="col-sm-3">Observações</dt>
            <dd class="col-sm-9 mb-3">@Model.Observacoes</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
