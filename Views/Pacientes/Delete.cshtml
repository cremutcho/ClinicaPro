@model ClinicaPro.Core.Entities.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir este paciente?</h3>

<div>
    <h4>@Model.Nome</h4>
    <p><strong>CPF:</strong> @Model.CPF</p>
    <p><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
