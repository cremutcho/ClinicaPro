@model ClinicaPro.Core.Entities.Paciente

@{
    ViewData["Title"] = "Editar Paciente";
}

<h1 class="mt-4 text-center text-primary fw-bold">Editar Paciente</h1>

<div class="card shadow-lg border-0 rounded-4 mt-4 mx-auto" style="max-width: 650px;">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-semibold"></label>
                <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite o nome completo" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataNascimento" class="form-label fw-semibold"></label>
                <input asp-for="DataNascimento" type="date" class="form-control form-control-lg" />
                <span asp-validation-for="DataNascimento" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CPF" class="form-label fw-semibold"></label>
                <input asp-for="CPF" class="form-control form-control-lg" placeholder="000.000.000-00" />
                <span asp-validation-for="CPF" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Endereco" class="form-label fw-semibold"></label>
                <input asp-for="Endereco" class="form-control form-control-lg" placeholder="Rua, número, bairro..." />
                <span asp-validation-for="Endereco" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefone" class="form-label fw-semibold"></label>
                <input asp-for="Telefone" class="form-control form-control-lg" placeholder="(XX) XXXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="email@exemplo.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-save2-fill me-1"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
