@model ClinicaPro.Core.Entities.Medico

@{
    ViewData["Title"] = "Detalhes do Médico";
}

<h1 class="mt-4">Detalhes do Médico</h1>

<div class="card shadow-sm p-4 mt-3">
    <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">CRM</dt>
        <dd class="col-sm-9">@Model.CRM</dd>

        <dt class="col-sm-3">Especialidade</dt>
        <dd class="col-sm-9">@Model.Especialidade?.Nome</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
