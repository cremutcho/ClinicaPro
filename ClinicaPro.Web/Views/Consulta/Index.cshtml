@model IEnumerable<ClinicaPro.Core.Entities.Consulta>

@{
    ViewData["Title"] = "Consultas";
}

@* REMOVIDO: <h2>@ViewData["Title"]</h2> - Isso tira o título grande da página. *@

<div class="container-fluid mt-5">

    @* Novo Bloco de Layout para o Botão (Alinhado à Esquerda, como na página de Médicos) *@
    <div class="d-flex justify-content-start align-items-center mb-3"> 
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-calendar-plus"></i> Nova Consulta
        </a>
    </div>

    @* Aplicando a classe de estilização e responsividade que você usou na página de Médicos *@
    <div class="table-responsive shadow-sm rounded"> 
        <table class="table table-striped table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().DataHora)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Paciente.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Medico.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Observacoes)</th>
                    <th class="text-center">Ações</th> @* Adicionando centralização para a coluna de Ações *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.DataHora.ToString("g")</td>
                        <td>@item.Status</td>
                        <td>@item.Paciente.Nome</td>
                        <td>@item.Medico.Nome</td>
                        <td>@item.Observacoes</td>
                        <td class="text-center">
                            @* Ações padronizadas e com ícones *@
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>