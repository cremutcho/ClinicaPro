@model ClinicaPro.Core.Entities.Consulta

@{
    ViewData["Title"] = "Excluir Consulta";
}

<h2>@ViewData["Title"]</h2>

<h4>Tem certeza que deseja excluir esta consulta?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Data e Hora</dt>
        <dd class="col-sm-10">@Model.DataHora.ToString("g")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Paciente</dt>
        @* CORREÇÃO CS8602 (Linha 20): Adicionando ?. para segurança e ?? para fallback *@
        <dd class="col-sm-10">@(Model.Paciente?.Nome ?? "Paciente Não Encontrado")</dd>

        <dt class="col-sm-2">Médico</dt>
        @* CORREÇÃO CS8602 (Linha 23): Adicionando ?. para segurança e ?? para fallback *@
        <dd class="col-sm-10">@(Model.Medico?.Nome ?? "Médico Não Encontrado")</dd>

        <dt class="col-sm-2">Observações</dt>
        <dd class="col-sm-10">@Model.Observacoes</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>