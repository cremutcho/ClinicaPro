@model ClinicaPro.Core.Features.Cargos.Commands.AdicionarCargoCommand

@{
    ViewData["Title"] = "Adicionar Novo Cargo";
}

<div class="card shadow-sm rounded mx-auto" style="max-width: 600px; margin-top: 100px;">
    <div class="card-body">
        
        <h1 class="card-title text-primary fw-bold border-bottom pb-2 mb-4">@ViewData["Title"]</h1>

        <form asp-action="Adicionar" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-bold">Nome do Cargo</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Descricao" class="form-label fw-bold">Descrição</label>
                <textarea asp-for="Descricao" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between pt-3 border-top">
                
                <a asp-action="Index" class="btn btn-link text-secondary p-0">
                    <i class="bi bi-arrow-left"></i> Voltar para a Lista
                </a>
                
                <button type="submit" class="btn btn-success shadow-sm">
                    <i class="bi bi-check-lg"></i> Salvar Cargo
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}