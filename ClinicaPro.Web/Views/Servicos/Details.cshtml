@model ClinicaPro.Core.Entities.Servico

@{
    ViewData["Title"] = "Detalhes do Serviço";
}

<h2 class="mb-4">Detalhes do Serviço</h2>

<div class="card shadow-sm p-3">
    <div class="mb-3">
        <strong>Nome:</strong> @Model.Nome
    </div>
    <div class="mb-3">
        <strong>Código TUSS:</strong> @Model.CodigoTuss
    </div>
    <div class="mb-3">
        <strong>Valor Padrão:</strong> @Model.ValorPadrao.ToString("C")
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>
