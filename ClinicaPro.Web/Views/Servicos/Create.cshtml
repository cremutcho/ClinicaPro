@model ClinicaPro.Core.Entities.Servico

@{
    ViewData["Title"] = "Novo Servi√ßo";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            
            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-bold"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CodigoTuss" class="form-label fw-bold"></label>
                <input asp-for="CodigoTuss" class="form-control" />
                <span asp-validation-for="CodigoTuss" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ValorPadrao" class="form-label fw-bold"></label>
                <input asp-for="ValorPadrao" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ValorPadrao" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
