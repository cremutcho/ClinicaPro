@model IEnumerable<ClinicaPro.Core.Entities.Servico>

@{
    ViewData["Title"] = "Serviços";
}

<h1 class="mb-3">Serviços</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Serviço</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Código TUSS</th>
            <th>Valor Padrão</th>
            <th style="width: 200px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Nome</td>
                <td>@s.CodigoTuss</td>
                <td>@s.ValorPadrao.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
