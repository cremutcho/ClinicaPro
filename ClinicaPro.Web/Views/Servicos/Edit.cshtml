@model ClinicaPro.Core.Entities.Servico

@{
    ViewData["Title"] = "Editar Serviço";
}

<h2 class="mb-4">Editar Serviço</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-bold"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CodigoTuss" class="form-label fw-bold"></label>
                <input asp-for="CodigoTuss" class="form-control" />
                <span asp-validation-for="CodigoTuss" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ValorPadrao" class="form-label fw-bold"></label>
                <input asp-for="ValorPadrao" class="form-control" />
                <span asp-validation-for="ValorPadrao" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
