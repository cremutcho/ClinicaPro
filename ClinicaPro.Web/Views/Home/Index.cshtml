@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Dashboard</h1>
    </div>

    <p class="text-muted mb-4">Visão geral dos principais indicadores da clínica.</p>

    <div class="row g-4">
        <!-- Card Pacientes -->
        <div class="col-md-3 col-sm-6">
            <div class="card text-center p-4 border-0 shadow-sm rounded-4">
                <i class="bi bi-person-fill fs-1 text-primary mb-3"></i>
                <h5 class="fw-semibold">Pacientes</h5>
                <p class="fs-4 fw-bold text-dark mb-0">120</p>
            </div>
        </div>

        <!-- Card Consultas -->
        <div class="col-md-3 col-sm-6">
            <div class="card text-center p-4 border-0 shadow-sm rounded-4">
                <i class="bi bi-calendar-check-fill fs-1 text-success mb-3"></i>
                <h5 class="fw-semibold">Consultas</h5>
                <p class="fs-4 fw-bold text-dark mb-0">45</p>
            </div>
        </div>

        <!-- Card Médicos -->
        <div class="col-md-3 col-sm-6">
            <div class="card text-center p-4 border-0 shadow-sm rounded-4">
                <i class="bi bi-people-fill fs-1 text-warning mb-3"></i>
                <h5 class="fw-semibold">Médicos</h5>
                <p class="fs-4 fw-bold text-dark mb-0">12</p>
            </div>
        </div>

        <!-- Card Agendamentos -->
        <div class="col-md-3 col-sm-6">
            <div class="card text-center p-4 border-0 shadow-sm rounded-4">
                <i class="bi bi-clock-fill fs-1 text-danger mb-3"></i>
                <h5 class="fw-semibold">Agendamentos</h5>
                <p class="fs-4 fw-bold text-dark mb-0">30</p>
            </div>
        </div>
    </div>
</div>
