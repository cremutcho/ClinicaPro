@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicaPro</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* ===== SIDEBAR ===== */
        .sidebar { position: fixed; top: 56px; left: 0; width: 250px; height: calc(100vh - 56px); background: #f8f9fa; border-right: 1px solid #ddd; padding-top: 10px; overflow-y: auto; transition: width 0.3s ease; z-index: 1030; }
        .sidebar.collapsed { width: 70px !important; }
        .sidebar.collapsed .list-group-item { font-size: 0; text-indent: -9999px; }
        .sidebar.collapsed i { font-size: 1.3rem !important; margin: 0 auto !important; text-indent: 0 !important; }

        .sub-item { padding-left: 35px !important; font-size: 0.9rem; background: #ffffff; }
        .accordion-toggle { cursor: pointer; }

        /* CONTEÚDO DESLOCADO */
        #content-wrapper { margin-left: 250px; padding-top: 70px; transition: margin-left 0.3s ease; }
        #content-wrapper.collapsed { margin-left: 70px !important; }
    </style>
</head>
<body>

    <!-- ===== NAVBAR ===== -->
    <nav class="navbar navbar-expand-lg topbar navbar-light bg-white border-bottom shadow-sm fixed-top">
        <div class="container-fluid px-3">
            <button id="sidebarToggle" class="btn btn-outline-secondary d-flex align-items-center me-2">
                <i class="bi bi-list"></i>
            </button>

            <a class="navbar-brand d-flex align-items-center gap-2 me-3" asp-controller="Home" asp-action="Index">
                <span class="brand-mark rounded-circle d-inline-flex align-items-center justify-content-center">🏥</span>
                <span class="brand-text fw-bold">ClinicaPro</span>
            </a>

            <form class="d-none d-md-flex ms-3 me-auto" role="search" asp-controller="Home" asp-action="Index">
                <div class="input-group input-group-sm">
                    <input class="form-control form-control-sm" type="search" placeholder="Pesquisar pacientes, consultas..." aria-label="Pesquisar">
                    <button class="btn btn-sm btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                </div>
            </form>

            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item me-3 d-none d-md-block">
                    <a class="nav-link position-relative" href="#" title="Notificações">
                        <i class="bi bi-bell fs-5"></i>
                        <span class="notif-badge position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                    </a>
                </li>

                <li class="nav-item dropdown">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                            <div class="user-avatar bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-2">
                                @(UserManager.GetUserName(User)?.Substring(0,1).ToUpper() ?? "U")
                            </div>
                            <div class="d-none d-md-block text-start">
                                <div class="fw-semibold small">@UserManager.GetUserName(User)</div>
                                <div class="small text-muted">Perfil</div>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage">Conta</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                    <button type="submit" class="btn btn-outline-danger w-100">Sair</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Entrar</a>
                    }
                </li>
            </ul>
        </div>
    </nav>

    <!-- ===== SIDEBAR ===== -->
    <div id="sidebar" class="sidebar">
        <div class="list-group list-group-flush">

            <a class="list-group-item list-group-item-action py-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>

            <!-- PACIENTES / CONSULTAS / MEDICOS -->
            @if (SignInManager.IsSignedIn(User))
            {
                if (User.IsInRole("Admin") || User.IsInRole("Recepcionista"))
                {
                    <a class="list-group-item list-group-item-action py-2" asp-controller="Pacientes" asp-action="Index">
                        <i class="bi bi-person-fill me-2"></i> Pacientes
                    </a>
                    <a class="list-group-item list-group-item-action py-2" asp-controller="Consulta" asp-action="Index">
                        <i class="bi bi-calendar-check-fill me-2"></i> Consultas
                    </a>
                }
                if (User.IsInRole("Admin"))
                {
                    <a class="list-group-item list-group-item-action py-2" asp-controller="Medico" asp-action="Index">
                        <i class="bi bi-people-fill me-2"></i> Médicos
                    </a>
                }
                if (User.IsInRole("Medico"))
                {
                    <a class="list-group-item list-group-item-action py-2" asp-controller="Consulta" asp-action="Index">
                        <i class="bi bi-calendar-check-fill me-2"></i> Minhas Consultas
                    </a>
                }
            }

            <!-- RH -->
            @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("RH")))
            {
                <a class="list-group-item list-group-item-action py-2 accordion-toggle" data-bs-toggle="collapse" href="#rhMenu">
                    <i class="bi bi-people-fill me-2"></i> RH
                    <i class="bi bi-chevron-down float-end"></i>
                </a>
                <div class="collapse" id="rhMenu">
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="Index">Funcionários</a>
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="PorCargo">Por Cargo</a>
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="PorPeriodo">Por Período</a>
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="PorStatus">Por Status</a>
                    <a class="list-group-item sub-item" asp-controller="Cargo" asp-action="Index">Cargos</a>
                </div>
            }

            <!-- FINANCEIRO -->
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a class="list-group-item list-group-item-action py-2 accordion-toggle" data-bs-toggle="collapse" href="#financeiroMenu">
                    <i class="bi bi-cash-coin me-2"></i> Financeiro
                    <i class="bi bi-chevron-down float-end"></i>
                </a>
                <div class="collapse" id="financeiroMenu">
                    <a class="list-group-item sub-item" asp-controller="ContasPagar" asp-action="Index">Contas a Pagar</a>
                    <a class="list-group-item sub-item" asp-controller="ContasReceber" asp-action="Index">Contas a Receber</a>
                    <a class="list-group-item sub-item" asp-controller="Pagamentos" asp-action="Index">Pagamentos</a>
                </div>
            }

            <!-- SERVIÇOS (NOVO) -->
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a class="list-group-item list-group-item-action py-2"
                   asp-controller="Servicos"
                   asp-action="Index">
                    <i class="bi bi-list-check me-2"></i> Serviços
                </a>
            }

        </div>
    </div>

    <!-- ===== CONTEÚDO ===== -->
    <main id="content-wrapper" class="container-fluid">
        <div class="pt-4">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById("sidebar");
        const content = document.getElementById("content-wrapper");
        const btn = document.getElementById("sidebarToggle");

        btn.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            content.classList.toggle("collapsed");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
