@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<aside id="appSidebar" class="app-sidebar bg-primary text-white">
    <div class="sidebar-top p-3 d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
            <span class="fs-5 fw-bold">ClinicaPro</span>
        </div>
        <button id="sidebarCollapse" class="btn btn-sm btn-outline-light d-md-none" aria-label="Fechar menu">
            <i class="bi bi-x"></i>
        </button>
    </div>

    <nav class="sidebar-nav px-1 pb-4">
        <a class="sidebar-link" asp-controller="Home" asp-action="Index">
            <i class="bi bi-house-door-fill me-2"></i> Dashboard
        </a>

        @if (SignInManager.IsSignedIn(User))
        {
            <!-- FUNCIONÁRIOS -->
            @if (User.IsInRole("Admin") || User.IsInRole("RH"))
            {
                <a class="sidebar-link accordion-toggle" data-bs-toggle="collapse" href="#funcionarioMenu" role="button">
                    <i class="bi bi-person-badge-fill me-2"></i> Funcionários
                    <i class="bi bi-chevron-down float-end"></i>
                </a>
                <div class="collapse" id="funcionarioMenu">
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="Index">Lista</a>
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="PorCargo">Por Cargo</a>
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="PorPeriodo">Por Período</a>
                    <a class="list-group-item sub-item" asp-controller="Funcionario" asp-action="PorStatus">Por Status</a>
                </div>

                <a class="sidebar-link" asp-controller="Cargo" asp-action="Index">
                    <i class="bi bi-briefcase-fill me-2"></i> Cargos
                </a>
            }

            <!-- PACIENTES -->
            @if (User.IsInRole("Admin") || User.IsInRole("Recepcionista"))
            {
                <a class="sidebar-link" asp-controller="Pacientes" asp-action="Index">
                    <i class="bi bi-person-fill me-2"></i> Pacientes
                </a>
            }

            <!-- MÉDICOS -->
            @if (User.IsInRole("Admin"))
            {
                <a class="sidebar-link" asp-controller="Medico" asp-action="Index">
                    <i class="bi bi-people-fill me-2"></i> Médicos
                </a>
            }

            <!-- CONSULTAS -->
            @if (User.IsInRole("Admin") || User.IsInRole("Recepcionista"))
            {
                <a class="sidebar-link" asp-controller="Consulta" asp-action="Index">
                    <i class="bi bi-calendar-check-fill me-2"></i> Consultas
                </a>
            }
            @if (User.IsInRole("Medico"))
            {
                <a class="sidebar-link" asp-controller="Consulta" asp-action="Index">
                    <i class="bi bi-calendar-check-fill me-2"></i> Minhas Consultas
                </a>
            }

            <!-- FINANCEIRO -->
            @if (User.IsInRole("Admin"))
            {
                <a class="sidebar-link accordion-toggle" data-bs-toggle="collapse" href="#financeiroMenu" role="button">
                    <i class="bi bi-cash-coin me-2"></i> Financeiro
                    <i class="bi bi-chevron-down float-end"></i>
                </a>
                <div class="collapse" id="financeiroMenu">
                    <a class="list-group-item sub-item" asp-controller="ContasPagar" asp-action="Index">Contas a Pagar</a>
                    <a class="list-group-item sub-item" asp-controller="ContasReceber" asp-action="Index">Contas a Receber</a>
                </div>
            }

            <!-- RH -->
            @if (User.IsInRole("Admin") || User.IsInRole("RH"))
            {
                <a class="sidebar-link accordion-toggle" data-bs-toggle="collapse" href="#rhMenu" role="button">
                    <i class="bi bi-people-fill me-2"></i> RH
                    <i class="bi bi-chevron-down float-end"></i>
                </a>
                <div class="collapse" id="rhMenu">
                    <a class="list-group-item sub-item" asp-controller="Funcionarios" asp-action="Index">Funcionários</a>
                    <a class="list-group-item sub-item" asp-controller="Cargos" asp-action="Index">Cargos</a>
                </div>
            }
        }
    </nav>

    <div class="sidebar-footer p-3 mt-auto">
        <div class="small text-white-50">Versão <strong>0.1</strong></div>
    </div>
</aside>

<script>
    const sidebar = document.getElementById("appSidebar");
    const collapseBtns = sidebar.querySelectorAll(".accordion-toggle");

    collapseBtns.forEach(btn => {
        btn.addEventListener("click", e => {
            e.preventDefault();
            const target = document.querySelector(btn.getAttribute("href"));
            const bsCollapse = new bootstrap.Collapse(target, { toggle: true });
        });
    });

    const sidebarCollapse = document.getElementById("sidebarCollapse");
    sidebarCollapse?.addEventListener("click", () => {
        sidebar.classList.toggle("collapsed");
    });
</script>
