@model ClinicaPro.Core.Features.RH.Queries.FuncionarioDto

@{
    ViewData["Title"] = "Editar Funcionário";
}

<h1 class="mt-4 text-warning fw-bold">Editar Funcionário</h1>
<p class="text-muted">Faça as alterações necessárias e salve para atualizar o registro.</p>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Edit" class="shadow p-4 bg-white rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <!-- Campo oculto para o ID, essencial para a atualização -->
            <input type="hidden" asp-for="Id" /> 

            <fieldset class="border p-3 mb-4 rounded">
                <legend class="float-none w-auto px-1 fs-5 text-secondary">Dados Pessoais</legend>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Sobrenome" class="form-label"></label>
                    <input asp-for="Sobrenome" class="form-control" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="CPF" class="form-label"></label>
                    <!-- CPF deve ser readonly para evitar problemas de integridade ou validação complexa -->
                    <input asp-for="CPF" class="form-control" readonly /> 
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-4 rounded">
                <legend class="float-none w-auto px-1 fs-5 text-secondary">Detalhes Contratuais e Status</legend>

                <div class="mb-3">
                    <label asp-for="Cargo" class="form-label"></label>
                    <input asp-for="Cargo" class="form-control" />
                    <span asp-validation-for="Cargo" class="text-danger"></span>
                </div>
                
                <!-- O campo Ativo é crucial para a Exclusão Lógica -->
                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="Ativo" id="AtivoCheckbox">
                    <label class="form-check-label" for="AtivoCheckbox">
                        Funcionário Ativo
                    </label>
                </div>
            </fieldset>
            
            <div class="d-flex justify-content-between pt-2">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Voltar à Lista
                </a>
                <button type="submit" class="btn btn-warning btn-lg text-white">
                    <i class="bi bi-arrow-clockwise"></i> Atualizar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}