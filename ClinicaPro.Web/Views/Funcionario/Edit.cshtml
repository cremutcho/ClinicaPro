@model ClinicaPro.Core.Entities.Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<div class="container mt-5">
    <h3>Editar Funcionário</h3>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CPF" class="form-label"></label>
            <input asp-for="CPF" class="form-control" />
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefone" class="form-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DataNascimento" class="form-label"></label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DataAdmissao" class="form-label"></label>
            <input asp-for="DataAdmissao" type="date" class="form-control" />
            <span asp-validation-for="DataAdmissao" class="text-danger"></span>
        </div>

        <!-- Dropdown de Cargo -->
        <div class="mb-3">
            <label asp-for="CargoId" class="form-label">Cargo</label>
            <select asp-for="CargoId" asp-items="ViewBag.Cargos" class="form-control"></select>
            <span asp-validation-for="CargoId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Ativo" class="form-label"></label>
            <input asp-for="Ativo" type="checkbox" class="form-check-input" />
            <span asp-validation-for="Ativo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
