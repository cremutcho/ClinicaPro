@model IEnumerable<ClinicaPro.Core.Entities.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
}

<h1 class="mt-4 text-primary fw-bold">Gestão de Funcionários</h1>

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-start align-items-center mb-3">
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-person-plus-fill me-1"></i> Novo Funcionário
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
                    <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                    <th>@Html.DisplayNameFor(model => model.DataContratacao)</th>
                    <th>Situação</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sobrenome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataContratacao)</td>
                    <td>
                        <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                            @(item.Ativo ? "Ativo" : "Inativo")
                        </span>
                    </td>
                    <td class="text-center">
                        
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-info-circle"></i> Detalhes
                        </a>
                        
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill"></i> Excluir
                        </a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>