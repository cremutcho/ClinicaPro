@model IEnumerable<ClinicaPro.Core.Entities.Funcionario>

@{
    ViewData["Title"] = "Lista de Funcionários";
}

<div class="container-fluid mt-5">

    <div class="d-flex justify-content-start align-items-center mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-fill-add"></i> Novo Funcionário
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Data de Nascimento</th>
                    <th>Data de Admissão</th>
                    <th>Cargo</th>
                    <th>Ativo</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.CPF</td>
                        <td>@item.Email</td>
                        <td>@item.Telefone</td>
                        <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td>
                        <td>@item.DataAdmissao.ToString("dd/MM/yyyy")</td>
                        <td>@item.Cargo?.Nome</td>
                        <td>@(item.Ativo ? "Sim" : "Não")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
