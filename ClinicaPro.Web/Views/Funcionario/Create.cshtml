@model ClinicaPro.Core.Entities.Funcionario

@{
    ViewData["Title"] = "Criar Funcionário";
}

<div class="container mt-5">
    <h3>Criar Funcionário</h3>

    <form asp-action="Create" method="post">

        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CPF" class="form-label"></label>
            <input asp-for="CPF" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Telefone" class="form-label"></label>
            <input asp-for="Telefone" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DataNascimento" class="form-label"></label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DataAdmissao" class="form-label"></label>
            <input asp-for="DataAdmissao" type="date" class="form-control" />
        </div>

        <!-- Dropdown de Cargo -->
        <div class="mb-3">
            <label asp-for="CargoId" class="form-label">Cargo</label>
            <select asp-for="CargoId" asp-items="ViewBag.Cargos" class="form-control"></select>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Ativo" type="checkbox" class="form-check-input" checked />
            <label asp-for="Ativo" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
