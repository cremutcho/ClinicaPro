@model ClinicaPro.Core.Features.Funcionarios.Commands.CriarFuncionarioCommand

@{
    ViewData["Title"] = "Novo Funcionário";
}

<h1 class="mt-4 text-center text-primary fw-bold">Cadastrar Novo Funcionário</h1>

<div class="card shadow-lg border-0 rounded-4 mt-4 mx-auto" style="max-width: 650px;">
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-semibold"></label>
                <input asp-for="Nome" class="form-control form-control-lg" placeholder="Primeiro nome" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sobrenome" class="form-label fw-semibold"></label>
                <input asp-for="Sobrenome" class="form-control form-control-lg" placeholder="Sobrenome" />
                <span asp-validation-for="Sobrenome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CPF" class="form-label fw-semibold"></label>
                <input asp-for="CPF" class="form-control form-control-lg" placeholder="000.000.000-00" />
                <span asp-validation-for="CPF" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cargo" class="form-label fw-semibold"></label>
                <input asp-for="Cargo" class="form-control form-control-lg" placeholder="Ex: Médico, Recepcionista" />
                <span asp-validation-for="Cargo" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataContratacao" class="form-label fw-semibold"></label>
                <input asp-for="DataContratacao" type="date" class="form-control form-control-lg" />
                <span asp-validation-for="DataContratacao" class="text-danger small"></span>
            </div>
            
            <div class="form-check mb-4 mt-4">
                <input class="form-check-input" type="checkbox" asp-for="Ativo" />
                <label class="form-check-label fw-semibold" asp-for="Ativo">
                    @Html.DisplayNameFor(model => model.Ativo) (Funcionário Ativo)
                </label>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                </a>
                <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="bi bi-person-plus-fill me-1"></i> Salvar Funcionário
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}