@model ClinicaPro.Core.Entities.Funcionario

@{
    ViewData["Title"] = "Detalhes do Funcionário";
}

<h1 class="mt-4 text-center text-primary fw-bold">Detalhes do Funcionário</h1>

<div class="card shadow-lg border-0 rounded-4 mt-4 mx-auto" style="max-width: 650px;">
    <div class="card-header bg-primary text-white text-center fw-bold fs-5">
        @Model.Nome @Model.Sobrenome
    </div>
    <div class="card-body p-4">

        <dl class="row mb-0">
            
            <dt class="col-sm-4 fw-semibold">ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
            
            <dt class="col-sm-4 fw-semibold">CPF:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CPF)</dd>

            <dt class="col-sm-4 fw-semibold">Cargo:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cargo)</dd>

            <dt class="col-sm-4 fw-semibold">Contratação:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataContratacao)</dd>
            
            <dt class="col-sm-4 fw-semibold">Situação:</dt>
            <dd class="col-sm-8">
                <span class="badge @(Model.Ativo ? "bg-success" : "bg-danger")">
                    @(Model.Ativo ? "Ativo" : "Inativo")
                </span>
            </dd>
        </dl>
    </div>
    
    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left-circle me-1"></i> Voltar
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
    </div>
</div>