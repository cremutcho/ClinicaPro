@model IEnumerable<ClinicaPro.Core.Entities.Funcionario>

@{
    ViewData["Title"] = "Funcionários por Período";
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="PorPeriodo">
    <div class="row">
        <div class="col-md-4">
            <label>Data Inicial:</label>
            <input type="date" name="inicio" class="form-control" required />
        </div>

        <div class="col-md-4">
            <label>Data Final:</label>
            <input type="date" name="fim" class="form-control" required />
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Buscar</button>
        </div>
    </div>
</form>

<hr />

@if (Model != null && Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Data Admissão</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Nome</td>
                <td>@f.Cargo?.Nome</td>
                <td>@f.DataAdmissao.ToString("dd/MM/yyyy")</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nenhum registro encontrado no período informado.</p>
}
