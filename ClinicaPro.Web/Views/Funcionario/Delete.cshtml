@model ClinicaPro.Core.Entities.Funcionario

@{
    ViewData["Title"] = "Confirmar Deleção";
}

<h1 class="mt-4 text-center text-danger fw-bold">Deletar Funcionário</h1>

<div class="card shadow-lg border-0 rounded-4 mt-4 mx-auto" style="max-width: 650px;">
    <div class="card-header bg-danger text-white text-center fw-bold fs-5">
        Confirmação de Exclusão
    </div>
    <div class="card-body p-4">

        <h3 class="text-center mb-4">Tem certeza de que deseja deletar o funcionário **@Model.Nome @Model.Sobrenome**?</h3>

        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> 
            <strong>Atenção:</strong> Esta ação é irreversível e removerá o registro permanentemente.
        </div>

        <dl class="row border-bottom pb-3 mb-3">
            <dt class="col-sm-4 fw-semibold">ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
            
            <dt class="col-sm-4 fw-semibold">CPF:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CPF)</dd>
            
            <dt class="col-sm-4 fw-semibold">Cargo:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cargo)</dd>
        </dl>
        
        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" /> 
            
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-trash-fill me-1"></i> Confirmar Deleção
                </button>
            </div>
        </form>
    </div>
</div>