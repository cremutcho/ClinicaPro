@model IEnumerable<ClinicaPro.Core.Entities.Funcionario>

@{
    ViewData["Title"] = "Funcionários por Cargo";
}

<h2 class="mb-4 mt-5">@ViewData["Title"]</h2>


<form asp-action="PorCargo" method="post" class="row g-3 mb-4">
    @Html.AntiForgeryToken()

    <div class="col-md-4">
        <label class="form-label">Selecione um Cargo:</label>
        <select name="cargoId" class="form-select" asp-items="ViewBag.Cargos">
            <option value="">-- Selecione --</option>
        </select>
    </div>

    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Buscar</button>
    </div>
</form>

<hr />

@if (Model != null && Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Email</th>
                <th>Telefone</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Nome</td>
                <td>@f.Cargo?.Nome</td>
                <td>@f.Email</td>
                <td>@f.Telefone</td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model != null)
{
    <p class="text-muted">Nenhum funcionário encontrado para este cargo.</p>
}
