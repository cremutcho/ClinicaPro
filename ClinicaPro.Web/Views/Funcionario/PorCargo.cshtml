@{
    ViewData["Title"] = "Relatório — Funcionários por Cargo";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="PorCargo" method="post" class="row g-3">
        @* Anti-forgery token *@
        @Html.AntiForgeryToken()

        <div class="col-auto">
            <label class="form-label" for="cargoId">Cargo</label>
            <select id="cargoId" name="cargoId" class="form-select" asp-items="ViewBag.Cargos">
                <option value="">-- Selecione --</option>
            </select>
        </div>

        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
        </div>
    </form>
</div>
